---
layout: layout.njk
title: {{ site.siteTitle }}
pagination:
  size: 5
  data: collections.blog
  reverse: true
  alias: posts
permalink: "/{% if pagination.pageNumber != 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<ul>
{% for post in posts %}
    <li><article class="blog-post">
            <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
            <div class="date-metadata">Published on {{ post.date | postDate  }}</div>
            <div class="post">{{ post.templateContent | safe }}</div>
         </article>   
    </li>
{% endfor %}
</ul>

{% include "_pagepagination.html" %}