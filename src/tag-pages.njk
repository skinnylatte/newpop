---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag }}/"
layout: layout.njk
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
eleventyExcludeFromCollections: true
---

<h1>Posts tagged "{{ tag }}"</h1>

<a href="/tags/">‚Üê All tags</a>

{% set postsWithTag = collections[tag] %}
{% set totalPosts = postsWithTag.length %}

<!-- Display full posts for this tag -->
<ul>
{% for post in postsWithTag | reverse %}
<li>
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <div class="post-meta">
    <time class="date-metadata" datetime="{{ post.data.date }}">
      Published on {{ post.data.date | postDate }}
    </time>
  </div>
  <div class="post">{{ post.templateContent | safe }}</div>
  {% if post.data.tags %}
  <div class="post-tags">
  {% for tagItem in post.data.tags %}
  {% if tagItem != 'posts' and tagItem != 'all' %}
  <a href="/tags/{{ tagItem | slugify }}/" class="tag-item">{{ tagItem }}<span class="visually-hidden"> (view all posts tagged {{ tagItem }})</span></a>
  {% endif %}
  {% endfor %}
  </div>
  {% endif %}
</li>
{% endfor %}
</ul>

<div class="tag-info">
  <p>{{ totalPosts }} post{% if totalPosts != 1 %}s{% endif %} tagged "{{ tag }}"</p>
</div>