---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag }}/"
layout: layout.njk
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
eleventyExcludeFromCollections: true
---

<h1>Posts tagged "{{ tag }}"</h1>

<a href="/tags/">‚Üê All tags</a>

{% set postsWithTag = collections[tag] %}
{% set totalPosts = postsWithTag.length %}

<!-- Display full posts for this tag -->
{% for post in postsWithTag | reverse %}
<article class="post">
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <div class="date-metadata">{{ post.data.date | postDate }}</div>
  {{ post.templateContent | safe }}
  <hr>
</article>
{% endfor %}

<div class="tag-info">
  <p>{{ totalPosts }} post{% if totalPosts != 1 %}s{% endif %} tagged "{{ tag }}"</p>
</div>